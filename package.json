{
  "name": "messenger-app",
  "version": "0.1.0",
  "private": true,
  "author": "Dmitriy Korneev",
  "repository": {
    "type": "git",
    "url": "git://github.com/Dm1Korneev/messenger-app.git"
  },
  "engines": {
    "node": "^16.16.0",
    "npm": "^8.11.0"
  },
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.9.1",
    "@tanstack/react-query": "^4.0.10",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.5",
    "@types/node": "^18.0.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/yup": "^0.29.14",
    "aws-sdk": "^2.1180.0",
    "cookie-parser": "^1.4.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jwt": "^7.7.5",
    "formik": "^2.1.4",
    "formik-material-ui": "^4.0.0-alpha.2",
    "http-errors": "^1.7.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.10",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@testing-library/user-event": "^10.1.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/http-errors": "^1.8.2",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/passport": "^1.0.9",
    "@types/passport-local": "^1.0.34",
    "@types/uuid": "^8.3.4",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-react": "^7.30.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "nodemon": "^2.0.19",
    "react-scripts": "^5.0.1",
    "source-map-explorer": "^2.5.2",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "start": "docker-compose up -d mongo && start nodemon ./src/Server/www.js && start react-scripts start",
    "client:start": "react-scripts start",
    "server:start": "nodemon --config nodemon.json",
    "mongo:start": "docker-compose up -d mongo",
    "test:lint": "eslint src/ src/Server/ --ext .jsx,.js,.ts,.tsx --color",
    "test:lint:fix": "eslint src/ src/Server/ --ext .jsx,.js,.ts,.tsx --color --fix",
    "test": "react-scripts test",
    "test-all": "react-scripts test --watchAll=false",
    "test-coverage": "react-scripts test --coverage --watchAll=false",
    "server:test:types": "tsc --project tsconfig.server.json",
    "cient:test:types": "tsc",
    "test:types": "cient:test:types && server:test:types",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "client:build": "react-scripts build",
    "server:build": "tsc --build tsconfig.server.json",
    "build": "npm run client:build && npm run server:build",
    "heroku-postbuild": "npm run build"
  },
  "proxy": "http://localhost:8080",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "src/Server/*",
      "bin/*",
      "server.js"
    ],
    "delay": "2500"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:lint && npm run test && npm run server:test:types && npm run client:test:types"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --ext .jsx,.js,.ts,.tsx --color"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/index.jsx"
    ]
  }
}
