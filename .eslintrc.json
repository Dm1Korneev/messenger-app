{
  "env": { 
    "browser": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "no-var": "error",
    "linebreak-style": "off",
    "no-multiple-empty-lines": ["error", {"max": 1}],
    "max-len": ["error", 140],
    "sort-imports": ["error", {"ignoreDeclarationSort": true}],
    "import/prefer-default-export": "off"
  }
}
