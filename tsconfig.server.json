{
    "compilerOptions": {
      "baseUrl": "src",
      "esModuleInterop": true,
      "target": "es6",
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
    },
    "exclude": ["node_modules"],
    "include": ["src/Server/**/*"]
  }